<div class="container d-flex justify-content-center align-items-center">
    <div class="row border rounded-2 p-3 bg-white shadow box-area">
      <div class="rounded-2 d-flex justify-content-center align-items-center flex-column right-box">
        <div class="row align-items-center">
          <div class="header-text mb-4">
            <h2>User Reigstration Form</h2>
          </div>
          <form action="/register" method="POST">
            <label for="" class="form-label"> First Name </label>
            <div class="input-group mb-3">
              <input type="name" name="firstName" class="form-control bg-light fs-6"
                placeholder="Juan" />
            </div>
            <label for="" class="form-label"> Middle Name </label>
            <div class="input-group mb-3">
              <input type="name" name="middleName" class="form-control bg-light fs-6"
                placeholder="" />
            </div>
            <label for="" class="form-label"> Last Name </label>
            <div class="input-group mb-3">
              <input type="name" name="lastName" class="form-control bg-light fs-6"
                placeholder="Dela Cruz" />
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Suffix</label>
                    <select name="suffix" id="suffix" class="form-control bg-light">
                        <option value="">Suffix</option>
                        <option value="jr">Jr</option>
                        <option value="sr">Sr</option>
                        <option value="II">II</option>
                        <option value="III">III</option>
                        <option value="IV">IV</option>
                    </select>
            </div>
                            <label for="" class="form-label">Age</label>
            <div class="input-group mb-3">
              <input type="age" name="age" class="form-control bg-light fs-6"
                placeholder="" />
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Gender</label>
                    <select name="gender" id="gender" class="form-control bg-light">
                        <option value="">Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
            </div>
            <label for="" class="form-label"> Height (CM) </label>
            <div class="input-group mb-3">
              <input type="height" name="height" class="form-control bg-light fs-6"
                placeholder="Dela Cruz" />
            </div>
                        <label for="" class="form-label"> Email Address </label>
            <div class="input-group mb-3">
              <input type="emailAddress" name="emailAddress" class="form-control bg-light fs-6"
                placeholder="example@example.com" />
            </div>
                                    <label for="" class="form-label"> Email Address </label>
            <div class="input-group mb-3">
              <input type="contactNumber" name="contactNumber" class="form-control bg-light fs-6"
                placeholder="09*********" />
            </div>
            <div class="input-group">
              <button class="btn btn-lg w-100 fs-6" style="background-color: #030067; color: #ececec;">
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
</div>